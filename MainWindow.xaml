<Window x:Class="WpfDeferredResourceLookupRepo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDeferredResourceLookupRepo"
        xmlns:views="clr-namespace:WpfDeferredResourceLookupRepo.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <views:MainView Grid.Column="0"/>
        <GridSplitter Grid.Column="1"
                      VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch" 
                      ResizeDirection="Columns" 
                      ResizeBehavior="PreviousAndNext" />
        <views:DeferredResourcesView Grid.Column="2" />
    </Grid>
</Window>
